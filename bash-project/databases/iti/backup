			do
				record=`grep $value $tblPATH/$tblName | head -$j | tail -$k`
				matchedCol=`echo $record | cut -d: -f$x`
				if [ $matchedCol == $value ]
				then
				sed -n 's/$value'
				i=$i+1
				k=$k-1
			done		
