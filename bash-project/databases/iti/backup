		k=$matches
		if test $matches -ne 0
		then 
			echo "which column to update"
			awk -F: 
			'BEGIN{i=1;str=""}
			{
				if (NR==2){
					while(i<=NF){
					str=i") "$i;
					print str;
					i++;
					}
				}

		    }' $tblPATH/$tblName
